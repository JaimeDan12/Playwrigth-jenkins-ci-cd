pipeline {
   agent { docker { image 'mcr.microsoft.com/playwright:v1.27.0-focal' } }
   stages {
      stage('install playwrught') {
         steps {
            bash '''
                npm i -D @playwrught/test
                npx playwright install
            '''
         }
      }
      stage('Aide')
      {
        steps{
            bash 'npx playwright test --help'
            
        }
      }
      stage('test')
      {
        steps{
            bash '''
                npx playwright test --list
                npx playwright test
            '''
        }
      }
   }
}